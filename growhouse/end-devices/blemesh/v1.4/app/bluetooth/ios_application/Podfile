platform :ios, '10.0'

workspace 'ble-mesh'

app_project = 'ble_mesh-app/ble_mesh-app.xcodeproj'
lib_project = 'BluetoothMesh/BluetoothMesh.xcodeproj'

project app_project
project lib_project

def application_pods
    pod 'RxSwift', '4.1.2'
    pod 'RxCocoa', '4.1.2'
    pod 'CocoaLumberjack/Swift', '3.3.0'
    pod 'SWTableViewCell', '0.3.7'
    pod 'SVProgressHUD', '2.2.5'
end

target 'ble_mesh-app' do
    use_frameworks!
    project app_project
    application_pods
end

target 'ble_mesh-app-dev' do
    use_frameworks!
    project app_project
    application_pods
end

target 'BluetoothMeshTests' do
    project lib_project
    pod 'Specta', '1.0.7'
    pod 'Expecta', '1.0.6'
    pod 'OCMock', '3.4.1'
end
