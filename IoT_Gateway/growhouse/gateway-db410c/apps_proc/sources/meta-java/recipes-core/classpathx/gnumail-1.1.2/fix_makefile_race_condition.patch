-	$(JAVAC) $(JAVACFLAGS) -classpath $(classpath) -d $(dst) $<
-
-#pop3: provider_util $(pop3_classes)
-
-$(pop3_classes): $(dst)/%.class: $(src)/%.java
-	$(JAVAC) $(JAVACFLAGS) -classpath $(classpath) -d $(dst) $<
-
