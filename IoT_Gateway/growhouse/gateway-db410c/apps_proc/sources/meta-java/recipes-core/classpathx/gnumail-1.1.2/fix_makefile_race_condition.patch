-	$(JAVAC) $(JAVACFLAGS) -classpath $(classpath) -d $(dst) $<
+build_sources: $(gnumail_sources) $(util_sources) $(provider_sources) \
+		$(smtp_sources) $(imap_sources) $(pop3_sources) $(nntp_sources) \
