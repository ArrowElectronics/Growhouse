From: einfochips <einfochips@einfochips.com>
Date: Wed, 12 Dec 2018 13:33:42 +0530
Subject: [PATCH] Update logrotate conf for growhouse log

---
 examples/logrotate-default | 11 ++++++++---
 1 file changed, 8 insertions(+), 3 deletions(-)

diff --git a/examples/logrotate-default b/examples/logrotate-default
index 39a092d..5f658fc 100644
--- a/examples/logrotate-default
+++ b/examples/logrotate-default
@@ -8,9 +8,6 @@ rotate 4
 # create new (empty) log files after rotating old ones
 create
 
-# use date as a suffix of the rotated file
-dateext
-
 # uncomment this if you want your log files compressed
 #compress
 
@@ -33,4 +30,12 @@ include /etc/logrotate.d
     rotate 1
 }
 
+"/var/log/growhouse.log" {
+
+    size 10M
+    copytruncate
+    create 700 root root
+    rotate 4
+    compress
+}
 # system-specific logs may be also be configured here.
